{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "6",
    "homepage_url": "https://github.com/kyuucr/add-link-to-qbittorrent-webui",
    "default_locale": "en",
    "applications": {
        "gecko": {
            "id": "{bb20a766-c3c7-4765-b9d2-4cc891ecd172}",
            "strict_min_version": "57.0"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
          "page": "options.html",
          "browser_style": true
    },
    "icons": {
        "48": "icons/qbittorrent-tray.svg",
        "96": "icons/qbittorrent-tray.svg"
    },
    "browser_action": {
        "browser_style": true,
        "default_title": "Open qBittorrent WebUI"
    },
    "permissions": [
        "http://*/*",
        "https://*/*",
        "contextMenus",
        "cookies",
        "notifications",
        "storage",
        "tabs"
    ]
}
